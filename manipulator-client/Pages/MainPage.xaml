<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maynard.ImageManipulator.Client.Pages.MainPage">
    <Grid RowDefinitions="6*,4*">
        <Grid ColumnDefinitions="3*,2*,2*">
            
            <!-- Left Panel: Directory Info -->
            <VerticalStackLayout Grid.Column="0" Padding="10">
                <Button Text="Open Directory" Clicked="OnOpenDirectoryClicked" />
                <Label Text="Current Directory: " x:Name="DirectoryLabel" />
                <Label Text="Subdirectories: " x:Name="SubdirCountLabel" />
                <Label Text="Images Found: " x:Name="ImageCountLabel" />
            </VerticalStackLayout>
            
            <!-- Middle Panel: Actions List -->
            <VerticalStackLayout Grid.Column="1" Padding="10" x:Name="ActionPanel">
                <CollectionView x:Name="ActionsListView" />
            </VerticalStackLayout>
            
            <!-- Right Panel: Image Preview -->
            <VerticalStackLayout Grid.Column="2" Padding="10">
                <Label Text="Original Image" />
                <Image x:Name="OriginalImage" WidthRequest="200" HeightRequest="200" />
                <Label Text="Preview" />
                <Image x:Name="PreviewImage" WidthRequest="200" HeightRequest="200" />
            </VerticalStackLayout>
            
        </Grid>
        <!-- Console Log -->
        <Grid Grid.Row="1" HeightRequest="300" MaximumHeightRequest="300" VerticalOptions="EndAndExpand">
            <Border BackgroundColor="Black" Padding="5">
                <ScrollView x:Name="ConsoleScrollView">
                    <Editor x:Name="ConsoleLog" IsReadOnly="True" FontFamily="Courier New" TextColor="White" BackgroundColor="Black" />
                </ScrollView>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
