<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Maynard.ImageManipulator.Client.Controls"
             xmlns:panels="clr-namespace:Maynard.ImageManipulator.Client.Controls.Panels"
             x:Class="Maynard.ImageManipulator.Client.Pages.TransformationPage">
    <Grid RowDefinitions="9*,1*">
        <Grid Grid.Row="0" ColumnDefinitions="*,*,*">
            <panels:DirectoryPanel Grid.Column="0" Title="Current Directory"/>
            <panels:ActionPanel Grid.Column="1" Title="Actions"/>
            <panels:PreviewPanel Grid.Column="2" Title="Preview"/>
        </Grid>
        <Grid Grid.Row="1">
            <panels:Panel>
                <controls:Terminal />
            </panels:Panel>
        </Grid>
    </Grid>
</ContentPage>
