<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maynard.ImageManipulator.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maynard.ImageManipulator.Client"
    xmlns:pages="clr-namespace:Maynard.ImageManipulator.Client.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="manipulator_client">
    
    <ShellContent
        Title="Open"
        ContentTemplate="{DataTemplate pages:LoadPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Transformations"
        ContentTemplate="{DataTemplate pages:TransformationPage}"
        Route="NewPage" />
    
    <ShellContent
        Title="Help"
        ContentTemplate="{DataTemplate pages:HelpPage}"
        Route="HelpPage" />

</Shell>
